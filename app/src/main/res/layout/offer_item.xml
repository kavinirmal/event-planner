<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_bg"
    android:layout_marginBottom="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp">

    <TextView
        android:id="@+id/tv_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/montserrat"
        android:text="Offer Name"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:text="Offer description"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_offer" />

    <TextView
        android:id="@+id/tv_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Permission Required"
        android:textColor="#ff0000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_view_offer"
        app:layout_constraintStart_toStartOf="@+id/tv_description" />

    <Button
        android:id="@+id/btn_view_offer"
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/border_btn"
        android:fontFamily="@font/montserrat"
        android:text="View"
        android:textColor="#187BCD"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />

</androidx.constraintlayout.widget.ConstraintLayout>